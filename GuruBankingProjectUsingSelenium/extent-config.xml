<?xml version="1.0" encoding="UTF-8"?>
<extentreports>
  <configuration>
    
    <!-- Report Title on Browser Tab -->
    <documentTitle>Guru Banking Automation Report</documentTitle>

    <!-- Report Name shown inside the report -->
    <reportName>GuruBankingProjectUsingSelenium - Functional Test Report</reportName>

    <!-- Choose between "dark" or "standard" -->
    <theme>dark</theme>

    <!-- Encoding -->
    <encoding>utf-8</encoding>

    <!-- Chart configuration -->
    <testViewChartLocation>top</testViewChartLocation>
    <chartVisibilityOnOpen>true</chartVisibilityOnOpen>

    <!-- Timestamp format for report entries -->
    <timeStampFormat>dd MMM yyyy HH:mm:ss</timeStampFormat>

    <!-- Custom CSS for a clean look -->
    <css>
      .test-name { font-weight: bold; }
      .category-list { font-size: 14px; }
      .author-name { color: #ff9800; }
    </css>

    <!-- Custom JS for minor animations -->
    <js>
      console.log("Extent Report for GuruBankingProjectUsingSelenium loaded successfully.");
    </js>

  </configuration>
</extentreports>
